<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:drawableLeft="@drawable/ic_history"
            android:textColor="@color/yellow"
            android:drawableTint="@color/yellow"
            android:fontFamily="@font/opensans"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:drawablePadding="@dimen/_6sdp"
            />

        <TextView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fake"
            android:drawableLeft="@drawable/ic_fake"
            android:textColor="@color/red"
            android:drawableTint="@color/red"
            android:fontFamily="@font/opensans"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:drawablePadding="@dimen/_6sdp"
            />

        <TextView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real"
            android:drawableLeft="@drawable/ic_real"
            android:textColor="@color/green"
            android:drawableTint="@color/green"
            android:fontFamily="@font/opensans"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:drawablePadding="@dimen/_6sdp"
            />

        <LinearLayout
            android:id="@+id/llCheckFake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_primary"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_margin="@dimen/_15sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/show_image" />




            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center"
                    android:text="ABCD"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensans"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Description descriptn\ndescription description"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>