<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PaymentActivity">


    <RelativeLayout
        android:padding="@dimen/_10sdp"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        >


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            android:backgroundTint="@color/white"
            />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/imageButton"
            android:text="Payment"
            android:fontFamily="@font/opensans"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Amount"
            android:fontFamily="@font/opensans"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/imageButton"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:text=" â‚¹ 499"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/imageButton"
            android:textColor="@color/white"
            android:fontFamily="@font/opensans_semibold"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            />




    </RelativeLayout>


    <ScrollView
        android:layout_below="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp"
            >





            <LinearLayout
                android:background="@drawable/bg_coner"
                android:id="@+id/relativeLayout2"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="vertical"
                >


                <TextView
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sent Payment To :"
                    android:fontFamily="@font/opensans"

                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:background="@drawable/gpaylogo"
                        android:layout_centerVertical="true"
                        />

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_58sdp"
                        android:background="@drawable/phonepelogo"
                        android:layout_centerVertical="true"
                        />


                    <ImageView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/paytmlogo"
                        android:layout_centerVertical="true"
                        />

                </LinearLayout>



                <TextView
                    android:id="@+id/tvUpi"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="mmrtamil632000@okaxis"
                    android:fontFamily="@font/opensans"

                    />


                <Button
                    android:id="@+id/btnCopy"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copy Upi"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/ic_baseline_content_copy_24"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/opensans"

                    />



            </LinearLayout>







            <RelativeLayout
                android:layout_below="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_baseline_check_circle_24"
                        />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider1"
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="@dimen/_210sdp"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/ic_baseline_check_circle_24"
                        />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider2"

                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="@dimen/_96sdp"
                        android:layout_gravity="center"/>


                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/ic_baseline_check_circle_24"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="If you have paid, please upload a screenshot"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans"

                        />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_10sdp"
                        >

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardView"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_120sdp"
                            app:cardCornerRadius="@dimen/_4sdp"
                            android:backgroundTint="#DFDEDE"
                            >



                            <ImageButton
                                android:id="@+id/ibAdd"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_baseline_add_24"
                                android:backgroundTint="@color/white"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"/>

                            <ImageView
                                android:scaleType="fitXY"
                                android:id="@+id/ivImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />


                        </com.google.android.material.card.MaterialCardView>



                        <Button
                            android:id="@+id/upload_image"
                            android:layout_width="wrap_content"
                            android:enabled="false"
                            android:layout_below="@+id/cardView"
                            android:text="Upload Image"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>



                    <TextView
                        android:layout_marginTop="@dimen/_28sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Processing Please wait.."
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/opensans"
                        android:textColor="@color/black"
                        />


                    <ImageView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/agent"
                        />

                    <TextView
                        android:id="@+id/tv_help_btn"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help"
                        android:background="@drawable/bg_coner"
                        android:backgroundTint="@color/primaryColor"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"
                        android:paddingHorizontal="@dimen/_10sdp"
                        />


                    <TextView
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/opensans"
                        android:textColor="@color/black"
                        />


                </LinearLayout>


            </RelativeLayout>







        </RelativeLayout>


    </ScrollView>

</RelativeLayout>